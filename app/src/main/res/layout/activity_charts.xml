<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.x_packrat.ChartsActivity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/belongings_pie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/pie_chart_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

    </com.github.mikephil.charting.charts.PieChart>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/belongings_bar"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/bar_chart_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="8dp">
    </com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/bar_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/bar_chart_title"
        android:textSize="24sp"
        android:textColor="@color/action_bar_title_color"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/pie_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/pie_chart_title_most"
        android:textSize="24sp"
        android:textColor="@color/action_bar_title_color"
        android:textStyle="bold"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
